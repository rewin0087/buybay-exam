<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <span>Destinations</span>
        <%= link_to 'New Destination', new_destination_path, class: 'btn btn-outline-info btn-sm' %>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Maximum Price</th>
            <th>Categories</th>
            <th>References</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <%= render @destinations %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex justify-content-center pt-3">
        <%= paginate @destinations %>
      </div>
    </div>
  </div>
</div>