<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <span>Products</span>
        <%= link_to 'New Product', new_product_path, class: 'btn btn-outline-info btn-sm' %>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Reference</th>
            <th>Destination</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <%= render @products %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex justify-content-center pt-3">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>